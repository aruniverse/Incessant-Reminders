{
  "manifest_version": 2,
  "name": "Incessant Reminders",
  "version": "1.0",
  "default_locale": "en",
  "description": "This extension is perfect if you want to be given gentle reminders of little things to aid in the completion of your goals.",
  "icons": {
    "16": "clock_512.png",
    "48": "clock_512.png",
    "128": "clock_128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'",
  "offline_enabled": true,
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "short_name": "Reminders",
  "version_name": "Beta"
}
